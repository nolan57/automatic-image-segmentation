{
    "name": "OpenCV Development",
    "image": "mcr.microsoft.com/vscode/devcontainers/cpp:0-3",
    "extensions": [
        "ms-vscode.cpptools"
    ],
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libopencv-dev"
}
